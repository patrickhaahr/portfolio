package components

import "GOTH/theme"

templ Navigation(isDarkMode bool) {
	<nav class="sticky top-0 z-50 bg-gray-100 dark:bg-sky-950 p-4 text-black dark:text-white">
		<div class="flex justify-between items-center">
			<!-- Left side (Logo or Main Item) -->
			<div>
				<a href="#" class="font-bold">Home</a>
			</div>
			<!-- Right side (Navigation Links and Buttons) -->
			<div class="flex space-x-4 items-center">
				<a href="#">Home</a>
				<a href="#projects">Projects</a>
				<a href="#contact-me">Contact Me</a>
				<a
					href="/public/Resume.pdf"
					target="_blank"
					rel="noopener noreferrer"
					class="group cursor-pointer flex justify-between bg-blue-500 px-3 py-2 rounded-full text-white tracking-wider shadow-xl hover:bg-gray-900 hover:scale-105 duration-500 hover:ring-1 font-mono w-[100px]"
				>
					Resume
					<svg
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 24 24"
						stroke-width="2"
						stroke="currentColor"
						class="w-5 h-5 group-hover:animate-bounce"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3"
						></path>
					</svg>
				</a>
				<!-- Theme Toggle Button -->
				<button
					hx-post="/toggle-icon"
					hx-target="html"
					hx-swap="none"
					class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-9 w-9 rounded-full px-2"
					type="button"
				>
					<div id="theme-icon">
						if isDarkMode {
							@theme.DarkModeIcon()
						} else {
							@theme.LightModeIcon()
						}
					</div>
				</button>
			</div>
		</div>
	</nav>
}

